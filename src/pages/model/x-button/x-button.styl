@import '~@/stylus/mixins'

$ldsring-keyframe-name = lds-ring

.ix-btn
  padding 20rpx 30rpx
  box-sizing border-box
  .ix-btn_complete
    width 100%
    height 90rpx
    line-height 90rpx
    border-radius 50rpx
    color #fff
    background-color #735cc7
    padding 0
    transition all 0.2s ease 
    &_hover
      background-color #322977
    &_loading
      width 90rpx
      border-radius 45rpx
      background-color #a4a9bb
      position relative
      .loading-ani
        size(90rpx)
        absolute top 55% left 55%
        transform translate(-50%, -50%)
        &>view
          size(70rpx)
          box-sizing border-box
          display block
          position absolute
          margin 6rpx
          border 6rpx solid #fff
          border-radius 50%
          animation $ldsring-keyframe-name 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite
          border-color #fff transparent transparent transparent
          for row in 1 2 3
            &:nth-child({ row })
              animation-delay -0.45s + ((row - 1) * 0.15)
    &_success
      width 90rpx
      border-radius 45rpx
      position relative
      background-color #a0c953
      &>text
        color #fff
        font-size 30rpx
          

@keyframes { $ldsring-keyframe-name } {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}